<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity EmployeeHolidays.
    -->
    <changeSet id="20160214140937" author="jhipster">
        <createTable tableName="employee_holidays">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="week1" type="integer"/>
            <column name="week2" type="integer"/>
            <column name="week3" type="integer"/>
            <column name="week4" type="integer"/>
            <column name="week5" type="integer"/>
            <column name="last_changed_date" type="date"/>
            <column name="last_changed_by" type="varchar(255)"/>
            <column name="employee_billing_hours_id" type="bigint"/>
        </createTable>
        
        <addForeignKeyConstraint baseColumnNames="employee_billing_hours_id"
                                 baseTableName="employee_holidays"
                                 constraintName="fk_employeeholidays_employeebillinghours_id"
                                 referencedColumnNames="id"
                                 referencedTableName="employee_billing_hours"/>

    </changeSet>
</databaseChangeLog>
